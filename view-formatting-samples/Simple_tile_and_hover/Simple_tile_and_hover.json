{
  "schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "tileProps": {
    "height": "130",
    "width": "130",
    "hideSelection": true,
    "formatter": {
      "elmType": "a",
      "attributes": {
        "target": "_blank",
        "href": "[$url]"
      },
      "style": {
        "display": "flex",
        "align-items": "stretch",
        "margin-bottom": "16px",
        "min-width": "130px",
        "flex-grow": "1",
        "justify-content": "space-around",
        "padding": "5px",
        "text-decoration": "none"
      },
      "children": [
        {
          "elmType": "div",
          "style": {
            "width": "95%",
            "height": "92%",
            "box-shadow": "0px 1.6px 3.6px 0 #00000024, 0px 0.3px 0.9px 0 #00000024",
            "overflow": "hidden",
            "border-radius": "2px",
            "padding": "12px 6px 0px 6px"
          },
          "attributes": {
            "class": "ms-bgColor-neutralLighterAlt"
          },
          "customCardProps": {
            "openOnEvent": "hover",
            "directionalHint": "rightCenter",
            "isBeakVisible": true,
            "formatter": {
              "elmType": "div",
              "txtContent": "[$Title]",
              "style": {
                "padding": "10px"
              }
            }
          },
          "children": [
            {
              "elmType": "div",
              "style": {
                "text-align": "middle"
              },
              "children": [
                {
                  "elmType": "div",
                  "style": {
                    "color": "#333333",
                    "font-size": "12px",
                    "font-weight": "600",
                    "text-align": "center",
                    "margin-bottom": "5px",
                    "overflow": "hidden",
                    "text-overflow": "ellipsis",
                    "white-space": "nowrap"
                  },
                  "txtContent": "[$Title]"
                }
              ]
            },
            {
              "elmType": "div",
              "children": [
                {
                  "elmType": "div",
                  "attributes": {
                    "iconName": "[$icon]"
                  },
                  "style": {
                    "font-size": "45px",
                    "width": "100%",
                    "text-align": "center",
                    "padding-top": "12px",
                    "color": "#333333"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  }
}