{
    "hideColumnHeader": true,
    "hideSelection": true,
    "rowFormatter": {
      "elmType": "div",
      "style": {
        "width": "50%",
        "margin": "10px 0px 10px 20px",
        "padding": "0",
        "border-style": "none"
      },
      "children": [
        {
          "elmType": "div",
          "attributes": {
            "class": "ms-bgColor-themeLighterAlt"
          },
          "style": {
            "display": "block",
            "flex-direction": "column",
            "box-shadow": "2px 3px 5px gray"
          },
          "children": [
            {
              "elmType": "div",
              "attributes": {
                "class": "ms-bgColor-themePrimary ms-fontColor-white"
              },
              "style": {
                "display": "block",
                "height": "50px",
                "width": "400px",
                "padding": "10px 5px",
                "box-sizing": "border-box"
              },
              "customCardProps": {
                "openOnEvent": "hover",
                "directionalHint": "rightCenter",
                "isBeakVisible": true,
                "formatter": {
                  "elmType": "div",
                  "style": {
                    "display": "flex",
                    "flex-direction": "column",
                    "width": "500px",
                    "height": "100%"
                  },
                  "children": [
                    {
                      "elmType": "div",
                      "txtContent": "詳細",
                      "style": {
                        "font-size": "15px",
                        "padding-top": "15px"
                      }
                    },
                    {
                      "elmType": "div",
                      "txtContent": "[$Details]",
                      "style": {
                        "font-size": "15px",
                        "padding": "15px"
                      }
                    },
                    {
                      "elmType": "div",
                      "style": {
                        "display": "flex",
                        "justify-content": "center",
                        "padding": "10px 5px"
                      },
                      "children": [
                        {
                          "elmType": "a",
                          "attributes": {
                            "target":"_blank",
                            "href": "[$URL]",
                            "class": "ms-fontWeight-bold ms-bgColor-themePrimary"
                          },
                          "style": {
                            "padding": "5px 20px",
                            "font-size": "15px",
                            "color": "white",
                            "cursor": "pointer"
                          },
                          "customCardProps": {
                            "openOnEvent": "click",
                            "directionalHint": "rightCenter",
                            "isBeakVisible": true
                          },
                          "children": [
                            {
                              "elmType": "span",
                              "txtContent": "[$AnchorText]"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              },
              "children": [
                {
                  "elmType": "div",
                  "txtContent": "[$Title]",
                  "attributes": {
                    "class": "ms-fontSize-s ms-fontWeight-bold"
                  },
                  "style": {
                    "padding": "5px 10px",
                    "font-size": "15px"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  }